<Window x:Class="WPFHW2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFHW2"
        mc:Ignorable="d"
        Title="HomeWork 2" Height="190" Width="500">
    <Grid x:Name="HW2" Background="White" Margin="0,0,0,-6">
        <TextBox x:Name="name" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="age" HorizontalAlignment="Left" Margin="10,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="hobby" HorizontalAlignment="Left" Margin="10,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="ok" Content="OK" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top" Width="120" Click="ok_Click"/>
        <Label x:Name="text" Content="..." HorizontalAlignment="Left" Margin="140,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,-0.191 " Visibility="Hidden"/>
    </Grid>
</Window>
